LOCAL_INSTALLDIR=$HOME/local/

if [ -z $LD_LIBRARY_PATH ]; then
LD_LIBRARY_PATH=$LOCAL_INSTALLDIR/lib
else
LD_LIBRARY_PATH=$LOCAL_INSTALLDIR/lib:$LD_LIBRARY_PATH
fi

if [ -z $LD_RUN_PATH ]; then
LD_RUN_PATH=$LOCAL_INSTALLDIR/lib
else
LD_RUN_PATH=$LOCAL_INSTALLDIR/lib:$LD_RUN_PATH
fi

PATH=$LOCAL_INSTALLDIR/bin:$PATH

if [ -z $LDFLAGS ]; then
LDFLAGS="-L$LOCAL_INSTALLDIR/lib":$LDFLAGS
else
LDFLAGS="-L$LOCAL_INSTALLDIR/lib"
fi
export LDFLAGS


if [ -z $C_INCLUDE_PATH ]; then
C_INCLUDE_PATH=$LOCAL_INSTALLDIR/include/
else
C_INCLUDE_PATH=$LOCAL_INSTALLDIR/include/:$C_INCLUDE_PATH
fi

if [ -z $CPLUS_INCLUDE_PATH ]; then
CPLUS_INCLUDE_PATH=$LOCAL_INSTALLDIR/include/
else
CPLUS_INCLUDE_PATH=$LOCAL_INSTALLDIR/include/:$CPLUS_INCLUDE_PATH
fi

if [ -e $LOCAL_INSTALLDIR/installed.ParaView ]; then	
	PARAVIEW_DIR=`cat $LOCAL_INSTALLDIR/installed.ParaView`
	LD_LIBRARY_PATH=$LIBRARY:$PARAVIEW_DIR/lib
	LD_RUN_PATH=$LD_RUN_PATH:$PARAVIEW_DIR/lib
	PATH=$LIBRARY:$PARAVIEW_DIR/bin:$PATH
fi

export PATH
export C_INCLUDE_PATH	
export CPLUS_INCLUDE_PATH
export LD_RUN_PATH
export LD_LIBRARY_PATH
